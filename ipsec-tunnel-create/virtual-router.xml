<interface>
    <member>{{ tunnel_interface }}</member>
</interface>
<routing-table>
    <ip>
        <static-route>
           <entry name="tunnel-route2">
                    <path-monitor>
                      <enable>no</enable>
                      <failure-condition>any</failure-condition>
                      <hold-time>2</hold-time>
                    </path-monitor>
                    <bfd>
                      <profile>None</profile>
                    </bfd>
                    <interface>{{ tunnel_interface }}</interface>
                    <metric>10</metric>
                    <destination>192.168.45.0/24</destination>
                    <route-table>
                      <unicast/>
                    </route-table>
           </entry>
        </static-route>
    </ip>
</routing-table>